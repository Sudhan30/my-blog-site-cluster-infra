{
    "dashboard": {
        "title": "Blog Site Monitoring",
        "tags": [
            "blog",
            "monitoring",
            "kubernetes"
        ],
        "timezone": "browser",
        "schemaVersion": 16,
        "version": 1,
        "refresh": "30s",
        "time": {
            "from": "now-24h",
            "to": "now"
        },
        "panels": [
            {
                "id": 1,
                "title": "Site Uptime (24h)",
                "type": "stat",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 0,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "avg_over_time(probe_success{instance=\"https://blog.sudharsana.dev\"}[24h]) * 100",
                        "refId": "A"
                    }
                ],
                "options": {
                    "reduceOptions": {
                        "values": false,
                        "calcs": [
                            "lastNotNull"
                        ]
                    },
                    "text": {},
                    "colorMode": "background",
                    "graphMode": "none"
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "percent",
                        "decimals": 2,
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "red"
                                },
                                {
                                    "value": 95,
                                    "color": "yellow"
                                },
                                {
                                    "value": 99,
                                    "color": "green"
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 2,
                "title": "Site Status",
                "type": "stat",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 6,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "probe_success{instance=\"https://blog.sudharsana.dev\"}",
                        "refId": "A"
                    }
                ],
                "options": {
                    "reduceOptions": {
                        "values": false,
                        "calcs": [
                            "lastNotNull"
                        ]
                    },
                    "colorMode": "background",
                    "graphMode": "none"
                },
                "fieldConfig": {
                    "defaults": {
                        "mappings": [
                            {
                                "type": "value",
                                "value": "0",
                                "text": "DOWN"
                            },
                            {
                                "type": "value",
                                "value": "1",
                                "text": "UP"
                            }
                        ],
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "red"
                                },
                                {
                                    "value": 1,
                                    "color": "green"
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 3,
                "title": "Response Time",
                "type": "stat",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 12,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "probe_duration_seconds{instance=\"https://blog.sudharsana.dev\"}",
                        "refId": "A"
                    }
                ],
                "options": {
                    "reduceOptions": {
                        "values": false,
                        "calcs": [
                            "lastNotNull"
                        ]
                    },
                    "colorMode": "background",
                    "graphMode": "area"
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "s",
                        "decimals": 3,
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "green"
                                },
                                {
                                    "value": 1,
                                    "color": "yellow"
                                },
                                {
                                    "value": 3,
                                    "color": "red"
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 4,
                "title": "Blog Pods Running",
                "type": "stat",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 18,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "count(kube_pod_status_phase{namespace=\"web\", pod=~\"blog-.*\", phase=\"Running\"})",
                        "refId": "A"
                    }
                ],
                "options": {
                    "reduceOptions": {
                        "values": false,
                        "calcs": [
                            "lastNotNull"
                        ]
                    },
                    "colorMode": "background",
                    "graphMode": "none"
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "none",
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "red"
                                },
                                {
                                    "value": 1,
                                    "color": "yellow"
                                },
                                {
                                    "value": 2,
                                    "color": "green"
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 5,
                "title": "Site Response Time (24h)",
                "type": "graph",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 4
                },
                "targets": [
                    {
                        "expr": "probe_duration_seconds{instance=\"https://blog.sudharsana.dev\"}",
                        "refId": "A",
                        "legendFormat": "Response Time"
                    }
                ],
                "yaxes": [
                    {
                        "format": "s",
                        "label": "Time"
                    },
                    {
                        "format": "short"
                    }
                ],
                "lines": true,
                "fill": 1,
                "linewidth": 2
            },
            {
                "id": 6,
                "title": "Pod Status",
                "type": "graph",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 4
                },
                "targets": [
                    {
                        "expr": "kube_pod_status_phase{namespace=\"web\", pod=~\"blog-.*\", phase=\"Running\"}",
                        "refId": "A",
                        "legendFormat": "{{pod}} - Running"
                    },
                    {
                        "expr": "kube_pod_status_phase{namespace=\"web\", pod=~\"blog-.*\", phase=\"Pending\"}",
                        "refId": "B",
                        "legendFormat": "{{pod}} - Pending"
                    }
                ],
                "yaxes": [
                    {
                        "format": "short",
                        "label": "Status"
                    },
                    {
                        "format": "short"
                    }
                ],
                "lines": true,
                "fill": 0,
                "linewidth": 2
            },
            {
                "id": 7,
                "title": "Database Status",
                "type": "stat",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 0,
                    "y": 12
                },
                "targets": [
                    {
                        "expr": "pg_up{job=\"postgres-exporter\"}",
                        "refId": "A"
                    }
                ],
                "options": {
                    "reduceOptions": {
                        "values": false,
                        "calcs": [
                            "lastNotNull"
                        ]
                    },
                    "colorMode": "background",
                    "graphMode": "none"
                },
                "fieldConfig": {
                    "defaults": {
                        "mappings": [
                            {
                                "type": "value",
                                "value": "0",
                                "text": "DOWN"
                            },
                            {
                                "type": "value",
                                "value": "1",
                                "text": "UP"
                            }
                        ],
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "red"
                                },
                                {
                                    "value": 1,
                                    "color": "green"
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 8,
                "title": "Database Connections",
                "type": "stat",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 6,
                    "y": 12
                },
                "targets": [
                    {
                        "expr": "pg_stat_database_numbackends{datname=\"blog_db\"}",
                        "refId": "A"
                    }
                ],
                "options": {
                    "reduceOptions": {
                        "values": false,
                        "calcs": [
                            "lastNotNull"
                        ]
                    },
                    "colorMode": "value",
                    "graphMode": "area"
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "none",
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "green"
                                },
                                {
                                    "value": 50,
                                    "color": "yellow"
                                },
                                {
                                    "value": 90,
                                    "color": "red"
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 9,
                "title": "Backend Pods Running",
                "type": "stat",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 12,
                    "y": 12
                },
                "targets": [
                    {
                        "expr": "count(kube_pod_status_phase{namespace=\"web\", pod=~\"blog-backend-.*\", phase=\"Running\"})",
                        "refId": "A"
                    }
                ],
                "options": {
                    "reduceOptions": {
                        "values": false,
                        "calcs": [
                            "lastNotNull"
                        ]
                    },
                    "colorMode": "background",
                    "graphMode": "none"
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "none",
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "red"
                                },
                                {
                                    "value": 1,
                                    "color": "yellow"
                                },
                                {
                                    "value": 2,
                                    "color": "green"
                                }
                            ]
                        }
                    }
                }
            },
            {
                "id": 10,
                "title": "All Targets Health",
                "type": "stat",
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 18,
                    "y": 12
                },
                "targets": [
                    {
                        "expr": "count(up{namespace=\"web\"} == 1) / count(up{namespace=\"web\"}) * 100",
                        "refId": "A"
                    }
                ],
                "options": {
                    "reduceOptions": {
                        "values": false,
                        "calcs": [
                            "lastNotNull"
                        ]
                    },
                    "colorMode": "background",
                    "graphMode": "none"
                },
                "fieldConfig": {
                    "defaults": {
                        "unit": "percent",
                        "decimals": 1,
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "red"
                                },
                                {
                                    "value": 80,
                                    "color": "yellow"
                                },
                                {
                                    "value": 95,
                                    "color": "green"
                                }
                            ]
                        }
                    }
                }
            }
        ]
    },
    "overwrite": true
}